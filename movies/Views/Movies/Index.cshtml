@model IEnumerable<movies.Models.Movie>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <p>Sorry we do not have any movies at this time</p>
}
else
{
    <table class="table table-bordered table-hover table-responsive">
        <thead>
        <tr>
            <td>
                Movies
            </td>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                @*<td>
                    @movie.Name
                </td>*@
                <td>
                    @Html.ActionLink(movie.Name, "Details", "Movies", new {id = movie.Id},null)
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
        
        </tbody>
    </table>
}